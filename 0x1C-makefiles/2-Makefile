# name of executable: school
# rules: all -> The all rule builds the executable
# variables: CC, SRC, OBJ, NAME
# CC: the compiler to be used
# SRC: the .c files
# OBJ: the .o files
# NAME: the name of the executable

CC = gcc
SRC = main.c school.c
OBJ = main.o school.o # $(SRC:.c=.o)
NAME = school

# all: $(OBJ)
# 	${CC} ${OBJ} -o ${NAME}

all: main.o school.o
	${CC} ${OBJ} -o ${NAME}

main.o: main.c
	${CC} -c -o main.o main.c

school.o: school.c
	${CC} -c -o school.o school.c


